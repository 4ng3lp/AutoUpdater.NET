<Window x:Class="ZipExtractor.NETCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipExtractor.NETCore"
        Title="Extracting..." ResizeMode="NoResize" Width="600" SizeToContent="Height" ContentRendered="Window_ContentRendered" Closing="Window_Closing">
    <Grid Margin="0,15,0,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LabelInfo" Content="Initializing..." Width="Auto" Height="Auto" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,10,0" Grid.Row="0" />
        <ProgressBar x:Name="ProgressBar" Height="30" Margin="10,5,10,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="1"/>
    </Grid>
</Window>
